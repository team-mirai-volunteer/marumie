{
  "name": "poli-money-alpha",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run supabase:start && npm --prefix apps/user-facing-app run dev",
    "dev:webapp-only": "npm --prefix apps/user-facing-app run dev",
    "build": "prisma generate && prisma migrate deploy && npm --prefix apps/user-facing-app run build && npm --prefix apps/managing-app run build",
    "start": "npm --prefix apps/user-facing-app run start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:generate": "pnpm --filter @poli-money/db generate",
    "db:migrate:dev": "pnpm --filter @poli-money/db migrate:dev",
    "db:migrate:deploy": "pnpm --filter @poli-money/db migrate:deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node prisma/seed.cjs",
    "data:import:mf": "node scripts/import-mf.cjs",
    "supabase:init": "supabase init",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:types": "supabase gen types typescript --local > supabase/types.gen.ts",
    "supabase:reset": "supabase db reset",
    "dev:setup": "npm install && npm run supabase:start && npm run prisma:migrate && npm run prisma:seed",
    "dev:db:studio": "supabase dashboard"
  },
  "dependencies": {
    "@nivo/sankey": "^0.99.0",
    "@poli-money-alpha/db": "workspace:*",
    "@prisma/client": "^6.14.0",
    "csv-parse": "^5.5.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "prisma": "^6.14.0",
    "supabase": "^2.33.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
