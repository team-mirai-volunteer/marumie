{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "includes": [
      "admin/src/**/*",
      "admin/*.ts",
      "admin/*.js",
      "admin/*.tsx",
      "admin/*.jsx",
      "admin/package.json",
      "webapp/src/**/*",
      "webapp/*.ts",
      "webapp/*.js",
      "webapp/*.tsx",
      "webapp/*.jsx",
      "webapp/package.json",
      "package.json"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "error"
      },
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
